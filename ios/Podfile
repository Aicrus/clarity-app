$FirebaseAnalyticsWithoutAdIdSupport = true
# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  pod 'GoogleUtilities'
  use_frameworks! :linkage => :static

  # Facebook SDK - versão 18.0.2 gerenciada pelo flutter_facebook_auth
  # O flutter_facebook_auth já inclui FBSDKLoginKit, mas especificamos a versão exata
  # para garantir que o dashboard do Facebook detecte a versão correta
  pod 'FBSDKCoreKit', '18.0.2'
  pod 'FBSDKLoginKit', '18.0.2'

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['SWIFT_VERSION'] = '5.0'
    end

    # Xcode sandbox fix: evitar escrever em ${PODS_ROOT}
    target.shell_script_build_phases.each do |phase|
      next unless phase.shell_script
      if phase.name == 'Copy Pods Resources' || phase.shell_script.include?('resources-to-copy')
        phase.shell_script = phase.shell_script
          .gsub('${PODS_ROOT}/resources-to-copy-${TARGETNAME}.txt', '${DERIVED_FILE_DIR}/resources-to-copy-${TARGETNAME}.txt')
          .gsub('${PODS_ROOT}/resources-to-copy-${TARGETNAME}', '${DERIVED_FILE_DIR}/resources-to-copy-${TARGETNAME}')
          .gsub('${PODS_ROOT}/resources-to-copy-${TARGET_NAME}.txt', '${DERIVED_FILE_DIR}/resources-to-copy-${TARGET_NAME}.txt')
          .gsub('${PODS_ROOT}/resources-to-copy-${TARGET_NAME}', '${DERIVED_FILE_DIR}/resources-to-copy-${TARGET_NAME}')
      end
    end
  end
  
  # Remover referências aos frameworks Pods que não são necessários com static linkage
  runner_project_path = File.join(File.dirname(__FILE__), 'Runner.xcodeproj', 'project.pbxproj')
  if File.exist?(runner_project_path)
    content = File.read(runner_project_path)
    # Remove todas as linhas que contêm referências aos frameworks Pods
    content = content.lines.reject do |line|
      line.include?('Pods_Runner.framework') || line.include?('Pods_ImageNotification.framework')
    end.join
    File.write(runner_project_path, content)
  end
end

target 'ImageNotification' do
  use_frameworks! :linkage => :static
  pod 'Firebase/Messaging'
  pod 'GoogleUtilities'
end
